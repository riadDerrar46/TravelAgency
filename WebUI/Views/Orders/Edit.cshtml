@model Core.Domain.Entities.Order

@{
    ViewData["Title"] = "Edit Order";
}

<div class="container py-5">
    <div class="card mx-auto shadow" style="max-width:900px;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Order</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="OrderDate" class="form-label"></label>
                        <input asp-for="OrderDate" class="form-control form-control-lg" type="date" />
                        <span asp-validation-for="OrderDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TotalAmount" class="form-label"></label>
                        <input asp-for="TotalAmount" class="form-control form-control-lg" type="number" step="0.01" />
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    </div>
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <div>
                        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <img src="~/images/edit.svg" alt="Save" class="action-icon me-2"/> Save Changes
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}