@model Core.Domain.Entities.Order

@{
    ViewData["Title"] = "Create Order";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 mx-auto" style="max-width: 720px;">
        <div class="card-header bg-primary text-white p-3">
            <h4 class="mb-0">Create Order</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="OrderDate" class="form-label"></label>
                        <input asp-for="OrderDate" class="form-control" type="date" />
                        <span asp-validation-for="OrderDate" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TotalAmount" class="form-label"></label>
                        <input asp-for="TotalAmount" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="TotalAmount" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ClientId" class="form-label"></label>
                        <input asp-for="ClientId" class="form-control" type="number" />
                        <span asp-validation-for="ClientId" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TravelPlan_Id" class="form-label"></label>
                        <input asp-for="TravelPlan_Id" class="form-control" type="number" />
                        <span asp-validation-for="TravelPlan_Id" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}