@model IEnumerable<Core.Domain.Entities.Order>
@{
    ViewData["Title"] = "Orders";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h4 mb-0">Orders</h2>
        <a asp-action="Create" class="btn btn-primary"><img src="~/images/edit-add.svg" alt="Add" class="action-icon me-1"/> New Order</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No orders found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Order Date</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Client</th>
                        <th>Travel Plan</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model)
                    {
                        <tr>
                            <td>@o.Id</td>
                            <td>@o.OrderDate.ToString("yyyy-MM-dd")</td>
                            <td>@o.TotalAmount.ToString("C")</td>
                            <td>@o.Status</td>
                            <td>@o.ClientId</td>
                            <td>@o.TravelPlan_Id</td>
                            <td>
                                <a asp-action="Details" asp-controller="Orders" asp-route-id="@o.Id" class="btn btn-sm btn-outline-secondary me-1">
                                    <img src="~/images/informations.png" alt="View" class="action-icon table-action-icon" />
                                </a>
                                <a asp-action="Edit" asp-controller="Orders" asp-route-id="@o.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <img src="~/images/editer.png" alt="Edit" class="action-icon table-action-icon" />
                                </a>
                                <a asp-action="Delete" asp-controller="Orders" asp-route-id="@o.Id" class="btn btn-sm btn-outline-danger me-1">
                                    <img src="~/images/delete.png" alt="Delete" class="action-icon table-action-icon" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
