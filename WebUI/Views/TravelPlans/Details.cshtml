@model Core.Domain.Entities.TravelPlan

@{
    ViewData["Title"] = "Travel Plan Details";
}

<div class="container py-5">
    <div class="card mx-auto shadow" style="max-width:900px;">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Travel Plan Details</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h5>@Model.Title</h5>
                    <p class="text-muted">@Model.Destination</p>

                    <dl class="row mt-3">
                        <dt class="col-sm-3">People</dt>
                        <dd class="col-sm-9">@Model.NumberOfPeople</dd>
                        <dt class="col-sm-3">Budget</dt>
                        <dd class="col-sm-9">@Model.Budget.ToString("C")</dd>
                        <dt class="col-sm-3">Dates</dt>
                        <dd class="col-sm-9">@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "-") - @(Model.EndDate?.ToString("yyyy-MM-dd") ?? "-")</dd>
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    </dl>
                </div>
                <div class="col-md-4 text-center">
                    <img src="~/images/plan-placeholder.png" alt="Plan" class="img-fluid mb-3" style="max-width:160px;" />
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <img src="~/images/edit.svg" alt="Edit" class="action-icon me-1"/> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <img src="~/images/delete.svg" alt="Delete" class="action-icon me-1"/> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>