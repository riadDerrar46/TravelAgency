@model Core.Domain.Entities.Client

@{
    ViewData["Title"] = "Details";
}

<div class="container py-5">
    <div class="card mx-auto shadow" style="max-width:900px;">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Client Details</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h5>@Model.FirstName @Model.LastName</h5>
                    <p class="text-muted">@Model.Job</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone:</strong> @(string.IsNullOrEmpty(Model.PhoneNumber)?"-":Model.PhoneNumber)</p>
                    <p><strong>ID Card:</strong> @Model.IdCard_Number</p>
                    <p><strong>Passport:</strong> @Model.Passport_Number</p>
                </div>
                <div class="col-md-4 text-center">
                    <img src="~/images/profile-placeholder.png" alt="Profile" class="img-fluid rounded-circle mb-3" style="max-width:160px;" />
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><img src="~/images/edit.svg" alt="Edit" class="action-icon me-1"/> Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger"><img src="~/images/delete.svg" alt="Delete" class="action-icon me-1"/> Delete</a>
                    </div>
                </div>
            </div>
            <hr />
            <div class="mt-3">
                <h6>Description</h6>
                <p class="text-muted">No additional notes.</p>
            </div>
        </div>
    </div>
</div>
