@model IEnumerable<Core.Domain.Entities.User>
@{
    ViewData["Title"] = "Users";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h4 mb-0">Users</h2>
        <a asp-action="Create" class="btn btn-primary"><img src="~/images/edit-add.svg" alt="Add" class="action-icon me-1"/> New User</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No users found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@($"{u.FirstName} {u.LastName}")</td>
                            <td>@u.Email</td>
                            <td>@(string.IsNullOrEmpty(u.PhoneNumber) ? "-" : u.PhoneNumber)</td>
                            <td>
                                <a asp-action="Details" asp-controller="Users" asp-route-id="@u.Id" class="btn btn-sm btn-outline-secondary me-1">
                                    <img src="~/images/informations.png" alt="View" class="action-icon table-action-icon" />
                                </a>
                                <a asp-action="Edit" asp-controller="Users" asp-route-id="@u.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <img src="~/images/editer.png" alt="Edit" class="action-icon table-action-icon" />
                                </a>
                                <a asp-action="Delete" asp-controller="Users" asp-route-id="@u.Id" class="btn btn-sm btn-outline-danger me-1">
                                    <img src="~/images/delete.png" alt="Delete" class="action-icon table-action-icon" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
